@{
	ViewData["Title"] = "Chỉnh Sửa Sản phẩm";
}
@model EasyBuy_Frontend_Admin.Models.ProductViewModel
@using EasyBuy_Frontend_Admin.Models.Enums;


<!-- CSS riêng cho lớp con -->
@section Styles {

}

<div>
	<!-- BREADCRUMB -->
	<div class="page-meta">
		<nav class="breadcrumb-style-one" aria-label="breadcrumb">
			<ol class="breadcrumb">
				<li class="breadcrumb-item"><a href="#">Sản phẩm</a></li>
				<li class="breadcrumb-item" aria-current="page"><a href="@Url.Action("Index", "Product")">Quản lý Sản phẩm</a></li>
				<li class="breadcrumb-item active" aria-current="page">Chỉnh sửa Sản phẩm</li>
			</ol>
		</nav>
	</div>
	<!-- /BREADCRUMB -->

	<div class="layout-top-spacing col-12">
		<a href="@Url.Action("Index", "Product")" class="btn">
			Trở lại
		</a>

	</div>

	<div class="row layout-top-spacing">
		<div id="user-management" class="col-lg-12 layout-spacing">
			<div class="statbox widget box box-shadow">
				<div class="widget-content widget-content-area">
					<div class="col-12">
						<form asp-action="Edit" id="general-settings" method="POST">
							<div class="row">
								<div class="col-md-6">
									<div class="form-group mb-4">
										<label for="user">Tên sản phẩm<strong class="text-danger">*</strong></label>
										<input asp-for="ProductName"
											   type="text"
											   id="name"
											   class="form-control @(ViewData.ModelState["ProductName"]?.Errors.Count > 0 ? "is-invalid" : "")"
											   placeholder="Tên sản phẩm">
										<span asp-validation-for="ProductName" class="invalid-feedback" role="alert"></span>

									</div>
								</div>
							</div>
							<div class="row">
								<div class="col-md-6">
									<div class="form-group mb-4">
										<label for="user">Giá bán<strong class="text-danger">*</strong></label>
										<input asp-for="PriceToSell"
											   type="text"
											   id="name"
											   class="form-control @(ViewData.ModelState["PriceToSell"]?.Errors.Count > 0 ? "is-invalid" : "")"
											   placeholder="Giá bán">
										<span asp-validation-for="PriceToSell" class="invalid-feedback" role="alert"></span>

									</div>
								</div>
							</div>
							<div class="row">
								<div class="col-md-6">
									<div class="form-group mb-4">
										<label for="user">Giá nhập<strong class="text-danger">*</strong></label>
										<input asp-for="ImportPrice"
											   type="text"
											   id="name"
											   class="form-control @(ViewData.ModelState["ImportPrice"]?.Errors.Count > 0 ? "is-invalid" : "")"
											   placeholder="Giá nhập">
										<span asp-validation-for="ImportPrice" class="invalid-feedback" role="alert"></span>

									</div>
								</div>
							</div>
							<div class="row">
								<div class="col-md-6">
									<div class="form-group mb-4">
										<label for="user">Khuyến mãi</label>
										<input asp-for="Discount"
											   type="text"
											   id="name"
											   class="form-control @(ViewData.ModelState["Discount"]?.Errors.Count > 0 ? "is-invalid" : "")"
											   placeholder="Khuyến mãi">
										<span asp-validation-for="Discount" class="invalid-feedback" role="alert"></span>

									</div>
								</div>
							</div>
							<div class="row">
								<div class="col-md-6">
									<div class="form-group mb-4">
										<label for="user">Loại<strong class="text-danger">*</strong></label>
										<input asp-for="Model"
											   type="text"
											   id="name"
											   class="form-control @(ViewData.ModelState["Model"]?.Errors.Count > 0 ? "is-invalid" : "")"
											   placeholder="Loại">
										<span asp-validation-for="Model" class="invalid-feedback" role="alert"></span>

									</div>
								</div>
							</div>
							<div class="row">
								<div class="col-md-6">
									<div class="form-group mb-4">
										<label for="user">Màu sắc<strong class="text-danger">*</strong></label>
										<input asp-for="Color"
											   type="text"
											   id="name"
											   class="form-control @(ViewData.ModelState["Color"]?.Errors.Count > 0 ? "is-invalid" : "")"
											   placeholder="Màu sắc">
										<span asp-validation-for="Color" class="invalid-feedback" role="alert"></span>

									</div>
								</div>
							</div>
							<div class="row">
								<div class="col-md-6">
									<div class="form-group mb-4">
										<label for="user">Giới tính<strong class="text-danger">*</strong></label>
										<input asp-for="Gender"
											   type="text"
											   id="name"
											   class="form-control @(ViewData.ModelState["Gender"]?.Errors.Count > 0 ? "is-invalid" : "")"
											   placeholder="Giới tính">
										<span asp-validation-for="Gender" class="invalid-feedback" role="alert"></span>

									</div>
								</div>
							</div>
							<div class="row">
								<div class="col-md-6">
									<div class="form-group mb-4">
										<label for="user">Mô tả</label>
										<textarea asp-for="Description"
												  id="description"
												  class="form-control @(ViewData.ModelState["Description"]?.Errors.Count > 0 ? "is-invalid" : "")"
												  placeholder="Mô tả">
										</textarea>
										<span asp-validation-for="Description" class="invalid-feedback" role="alert"></span>
									</div>
								</div>
							</div>
							<div class="row">
								<div class="col-md-6">
									<div class="form-group mb-4">
										<label for="user">Hình ảnh<strong class="text-danger">*</strong></label>
										<input asp-for="ProductImg"
											   type="file"
											   id="name"
											   class="form-control @(ViewData.ModelState["ProductImg"]?.Errors.Count > 0 ? "is-invalid" : "")"
											   placeholder="Hình ảnh">
										<span asp-validation-for="ProductImg" class="invalid-feedback" role="alert"></span>
									</div>
								</div>
							</div>

							<div class="row">
								<div class="col-md-6">
									<div class="form-group mb-4">
										<label for="user">Trạng thái <strong class="text-danger">*</strong></label>
										<select asp-for="Status" id="Status"
												class="form-control @(ViewData.ModelState["Status"]?.Errors?.Count > 0 ? "is-invalid" : "")"
												asp-items="Html.GetEnumSelectList<ProductStatus>()">
											<option value="">Chọn</option>

										</select>
										<span asp-validation-for="Status" class="invalid-feedback" role="alert"></span>
									</div>
								</div>
							</div>
							<div class="row">
								<div class="col-md-6">
									<div class="form-group mb-4">
										<label for="category">Tên danh mục<strong class="text-danger">*</strong></label>
										<select asp-for="CategoryId" id="category"
												class="form-control @(ViewData.ModelState["CategoryId"]?.Errors?.Count > 0 ? "is-invalid" : "")"
												asp-items="ViewBag.Categories">
											<option value="">Chọn</option>
										</select>
										<span asp-validation-for="CategoryId" class="invalid-feedback" role="alert"></span>
									</div>
								</div>
							</div>

							<button type="submit" class="btn btn-primary">Hoàn tất</button>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

</div>

<!-- Scripts riêng cho lớp con -->
@section Scripts {

}